{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies"],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "schedule": ["before 10am on monday"],
  "timezone": "UTC",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on monday"]
  },
  "packageRules": [
    {
      "description": "Group all GitHub Actions updates together",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": false
    },
    {
      "description": "Group Nix flake lock updates",
      "matchManagers": ["nix"],
      "groupName": "Nix flake inputs",
      "schedule": ["before 10am on monday"],
      "automerge": false,
      "commitMessagePrefix": "chore(nix):"
    }
  ],
  "nix": {
    "enabled": true
  }
}
